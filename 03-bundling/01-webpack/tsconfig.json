{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,//habr√≠a que quitar esto?
    "skipLibCheck": true,
    "esModuleInterop": true,
    "ignoreDeprecations" : "5.0"//OJO, para silenciar error pero no perder de vista
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}